#astropy_stable

function codecolor {
    if [ -z "$1" ]; then
        echo "Usage: codecolor <filename>"
        return
    fi

    pygmentize -f rtf $1 > $1.rtf
}

function rawtofits {
    if [ -z "$1" ]; then
        echo "Usage: rawtofits <filename>";
        return
    fi

    dcraw -D -6 -W -g 1 0 -c -j $1 > $1.pgm;
    pnmtofits $1.pgm > $1.fits;
}

